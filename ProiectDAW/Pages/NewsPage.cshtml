@page "{NewsId:int}"
@model NewsPageModel
@{
}

<p>Title @Model.News.NewsTitle</p>
<p>Writer @Model.News.Writer</p>
<p>Content @Model.News.Body</p>
<p>Date @Model.News.Date.ToString("dd-MM-yyyy")</p>
<h3>Comments</h3>
@foreach(Models.Comments comment in Model.Comments)
{
    <p>@comment.Comment</p>
}
<p> <a asp-page="/Index">Back to home page.</a> </p>
<p>Do you want to delete this entry?</p>
<button><a asp-page="\DeleteNewsPage" asp-route-NewsId="@Model.News.Id">Delete </a></button>
<p>Do you want to edit this entry?</p>
<button><a asp-page="\EditNewsPage" asp-route-NewsId="@Model.News.Id">Edit </a></button>
