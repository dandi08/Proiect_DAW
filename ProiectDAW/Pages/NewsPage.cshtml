@page "{NewsId:int}"
@model NewsPageModel
@{
}

<p>Title @Model.News.NewsTitle</p>
<p>Writer @Model.News.Writer</p>
<p>Content @Model.News.Body</p>
<p>Date @Model.News.Date.ToString("dd-MM-yyyy")</p>
<h3>Comments</h3>
<style>
    .user_name{
    font-size:14px;
    font-weight: bold;
}
.comments-list .media{
    border-bottom: 1px dotted #ccc;
}
</style>
</div>
<div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="page-header">
                    <h1><small class="pull-right">@Model.Comments.Count comments</small> Comments </h1>
                </div>
                <div class="comments-list">
                    <div class="media">
                        <div class="media-body">
                            @foreach(Models.Comments com in @Model.Comments)
                            {
                                <h4 class="media-heading user_name"> @com.Name </h4>
                                <p>@com.Body</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container">
    <br />
    <p>Your Comment</p>
    <form method="post">
        <input asp-for="comm.NewsId" type="hidden"/>
        <label>Name</label>
        <input asp-for="comm.Name" />
        <label>Comment:</label>
        <input asp-for="comm.Body" />
        <input type="submit" value="Save" />
    </form>
</div>
<p> <a asp-page="/Index">Back to home page.</a> </p>
<p>Do you want to delete this entry?</p>
<button><a asp-page="\DeleteNewsPage" asp-route-NewsId="@Model.News.Id">Delete </a></button>
<p>Do you want to edit this entry?</p>
<button><a asp-page="\EditNewsPage" asp-route-errorCode="0" asp-route-NewsId="@Model.News.Id">Edit </a></button>
