@page "{errorCode:int}"
@model ProiectDAW.Pages.SignUpModel
@{
}

<div class="container-login">
	@if (Model.errorCode == 1)
	{
		<div class="alert">
			<p>Passwords dont match</p>
		</div>
	}

	@if (Model.errorCode == 2)
	{
		<div class="alert">
			<p>Username is in use</p>
		</div>
	}

	@if (Model.errorCode == 3)
	{
		<div class="alert">
			<p>Username must contain a letter</p>
		</div>
	}

	<div class="screen">
		<div class="screen__content">
			<form class="login" method="post">
				<div class="login__field">
					<i class="login__icon fas fa-user"></i>
					<input asp-for="Account.Username" type="text" class="login__input" placeholder="User name / Email">
				</div>
				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
					<input id = "firstPassword" asp-for="Account.Password" type="password" class="login__input" placeholder="Password">
				</div>
				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
					<input id = "secondPassword" asp-for="checkPassword" type="password" class="login__input" placeholder="Type password again">
				</div>
				<button class="button login__submit">
					<span class="button__text">Log In Now</span>
					<i class="button__icon fas fa-chevron-right"></i>
					<input type="submit" value="Login" />
				</button>
			</form>
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>
	</div>
</div>
