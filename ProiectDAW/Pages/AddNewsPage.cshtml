@page "{errorCode:int}"
@model AddNewsPage
@{
}

<div>
    @if (Model.errorCode == 1)
    {
        <div>
            <p>Fields can not be empty!</p>
        </div>
    }

    <h1>Add your news below:</h1>

    <form method="post" asp-page-handler="AddNews">
        <label>Title: </label>
        <input asp-for="news.NewsTitle" /> <br></br>

        <label>Lead: </label>
        <input asp-for="news.Lead" /><br></br>

        <label>Writer: </label>
        <input asp-for="news.Writer" /><br></br>

        <label>The body: </label>
        <input asp-for="news.Body" /><br></br>

        <label>Subcategory: </label>
        <select asp-for="news.SubCategoryId" asp-items="Model.subcategories">
            
        </select>
        <br></br>
        <label>Date: </label>
        <input asp-for="news.Date" /><br></br>

        <input type="submit" value="Submit" />

    </form>

    <h1>Add a new category:</h1>

    <form method="post" asp-page-handler="AddCategory">
        <label>Subcategory name: </label>
        <input asp-for="category.CategoryName" /> <br></br>

        <input type="submit" value="Submit" />

    </form>

    <h1>Add a new subcategory:</h1>

    <form method="post" asp-page-handler="AddSubCategory">
        <label>Category name: </label>
        <input asp-for="subCategory.SubCategoryName" /> <br></br>

        <label>Category: </label>
        <select asp-for="subCategory.CategoryId" asp-items="Model.categories">

        </select><br></br>

        <input type="submit" value="Submit" />


    </form>

    <button><a asp-page="\Index">Back </a></button>
</div>